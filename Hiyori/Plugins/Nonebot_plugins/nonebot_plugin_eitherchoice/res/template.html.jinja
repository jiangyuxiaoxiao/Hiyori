<html>
  <head>
    <meta charset="utf-8" />

    <style>
      {{ css }}
    </style>

    <style>
      body {
        font-family: {{ main_font }} !important;
      }

      pre,
      code {
        font-family: {{ code_font }} !important;
      }

      .subtitle {
        margin-bottom: 0.25rem;
        text-align: center;
        font-size: 1.5rem;
        line-height: 2rem;
        font-weight: 700;
      }

      .title {
        background-image: linear-gradient(to right, #22c55e, #16a34a);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        font-size: 2.25rem;
        line-height: 2.5rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 1rem;
      }

      th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: left;
        background-color: #04aa6d;
        color: #fff;
        text-align: center;
        font-size: 20px;
      }

      table {
        border-collapse: collapse;
      }

      td,
      th {
        border: 1px solid #ddd;
        padding: 8px;
      }

      td:first-child {
        text-align: center;
      }

      th:first-child,
      th:nth-child(3) {
        background-color: #2b2b2b;
      }

      td:nth-child(2),
      td:nth-child(3),
      th:nth-child(2),
      th:nth-child(3) {
        width: 40%;
      }

      td:first-child,
      th:first-child {
        width: 20%;
      }

      tr:nth-child(2n) {
        background-color: #f2f2f2;
      }

      .body {
        width: fit-content;
        height: fit-content;
        margin: auto;
        padding: 20px;
      }
    </style>
  </head>

  <body>
    <div class="body">
      <div class="subtitle">{{ a }} VS {{ b }}</div>
      <div class="title">{{ a }} for sure!</div>
      <div class="table">{{ table|safe }}</div>
    </div>
  </body>

  {{ extra }}
</html>
